# 開發環境配置文件
# 積分管理系統前端配置

# API 端點配置
REACT_APP_API_BASE_URL=http://localhost:5000/api
REACT_APP_API_TIMEOUT=30000

# 檔案上傳配置
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_ALLOWED_FILE_TYPES=.jpg,.jpeg,.png,.pdf,.docx,.xlsx
REACT_APP_MAX_FILES_PER_UPLOAD=5

# 積分系統配置
REACT_APP_PROMOTION_START_DATE=2024-09-01
REACT_APP_PROMOTION_MONTHS=8
REACT_APP_MIN_PASSING_PERCENTAGE=62
REACT_APP_QUARTERLY_PASSING_PERCENTAGE=68
REACT_APP_MANAGEMENT_PASSING_PERCENTAGE=72

# 功能開關
REACT_APP_ENABLE_FILE_UPLOAD=true
REACT_APP_ENABLE_WORK_LOG=true
REACT_APP_ENABLE_ADMIN_PANEL=true
REACT_APP_ENABLE_ANALYTICS=true

# 外觀設定
REACT_APP_THEME=default
REACT_APP_COMPANY_NAME=開發測試公司
REACT_APP_SYSTEM_TITLE=積分管理系統 (開發版)

# 安全設定
REACT_APP_ENABLE_HTTPS=false
REACT_APP_SECURE_COOKIES=false

# 監控和分析
REACT_APP_ENABLE_ERROR_TRACKING=false
REACT_APP_ENABLE_PERFORMANCE_MONITORING=false

# 快取設定
REACT_APP_CACHE_DURATION=60000
REACT_APP_ENABLE_OFFLINE_MODE=false

# 開發工具
REACT_APP_ENABLE_REDUX_DEVTOOLS=true
REACT_APP_ENABLE_DEBUG_MODE=true

# 模擬數據
REACT_APP_USE_MOCK_DATA=true
REACT_APP_MOCK_API_DELAY=500
